{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "controllerFileNameSuffix": [".controller.ts"],
          "dtoFileNameSuffix": [".dto.ts", ".command.ts"],
          "classValidatorShim": true
        }
      }
    ],
    "assets": ["**/*.hbs"],
    "watchAssets": true
  }
}
